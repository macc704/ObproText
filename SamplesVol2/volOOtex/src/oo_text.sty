\newcommand{\pdf}[3]{
	\includegraphics[width=450pt,trim=#1 #2 #1 #2,clip]{../src/res/#3}
}

\newcommand{\pdfx}[3]{
	\newpage
	\pdf{#1}{#2}{#3}
}

%\textwidth=466pt
\newcommand{\ppt}[1]{	
	\includegraphics[width=450pt,trim=2cm 3cm 2cm 3cm,clip]{../src/res/#1}
}

\newcommand{\pptx}[1]{
	\newpage
	\ppt{#1}
}

\newcommand{\code}[2]{
  \lstinputlisting[caption=#2.java,label=src:#1/#2]{../../#1/#2.java}
}

\newcommand{\errcode}[2]{
